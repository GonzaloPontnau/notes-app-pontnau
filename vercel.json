{
  "version": 2,
  "buildCommand": "cd frontend/app-notas-frontend && npm install && npm run build",
  "installCommand": "echo Skipping root install",
  "outputDirectory": "frontend/app-notas-frontend/dist",
  "builds": [
    {
      "src": "frontend/app-notas-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "npm run build"
      }
    },
    {
      "src": "backend/app/main.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/app/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/app-notas-frontend/dist/$1"
    }
  ]
} 